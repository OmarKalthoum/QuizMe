<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_quiz_background_color">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/menu_create_quiz"
        android:textColor="#ffffff"
        android:textSize="39dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/question_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Question"
        android:inputType="text"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/correct_answer_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:hint="Correct Answer"
        android:inputType="textPersonName"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_input" />

    <EditText
        android:id="@+id/wrong_answer_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Wrong Answer"
        android:layout_marginHorizontal="20dp"

        android:inputType="textPersonName"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_answer_one" />

    <EditText
        android:id="@+id/wrong_answer_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Wrong Answer"
        android:inputType="textPersonName"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_answer_two" />

    <EditText
        android:id="@+id/wrong_answer_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:ems="10"
        android:backgroundTint="#FFFFFF"
        android:hint="Wrong Answer"
        android:inputType="textPersonName"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_answer_input" />

    <Button
        android:id="@+id/done"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_round"
        android:text="Next Question"
        android:textColor="#FF5722"
        app:layout_constraintBottom_toTopOf="@+id/finish_create_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_wrong_answer" />

    <Button
        android:id="@+id/finish_create_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_round_green"
        android:text="Finish"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/question_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Question 1"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/question_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/add_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_answer_three"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <ImageButton
        android:id="@+id/add_wrong_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_correct_answer"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/add_correct_answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Correct Answer"
        android:textColor="#4E4C4C"
        app:layout_constraintBottom_toBottomOf="@+id/add_correct_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toEndOf="@+id/add_correct_answer"
        app:layout_constraintTop_toTopOf="@+id/add_correct_answer"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/add_wrong_answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Wrong Answer"
        android:textColor="#4E4C4C"
        app:layout_constraintBottom_toBottomOf="@+id/add_wrong_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/add_wrong_answer"
        app:layout_constraintTop_toTopOf="@+id/add_wrong_answer"
        app:layout_constraintVertical_bias="0.44" />

    <EditText
        android:id="@+id/correct_answer_two"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:backgroundTint="#FFFFFF"
        android:hint="Correct Answer"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_answer_three" />

    <EditText
        android:id="@+id/wrong_answer_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:backgroundTint="#FFFFFF"
        android:hint="Wrong Answer"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#4E4C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_answer_two" />

</androidx.constraintlayout.widget.ConstraintLayout>